{
    "version": "0.1.3",
    "push": [
        "github"
    ],
    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.ajax.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                [
                    "src/metaphorjs.ajax.js",
                    {
                        "as": "ajax"
                    }
                ]
            ],
            "expose": [
                "ajax"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.ajax.npm.js",
            "compile": false,
            "files": [
                [
                    "src/metaphorjs.ajax.js",
                    {
                        "keepExports": true
                    }
                ]
            ],
            "require": {
                "metaphorjs-select": "select",
                "metaphorjs-observable": "Observable",
                "metaphorjs-promise": "Promise"
            },
            "omit": [
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-select/src/metaphorjs.select.js"
            ]
        },
        "amd": {
            "target": "dist/metaphorjs.ajax.amd.js",
            "files": [
                [
                    "src/metaphorjs.ajax.js",
                    {
                        "returnExports": true
                    }
                ]
            ],
            "omit": [
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-select/src/metaphorjs.select.js"
            ],
            "define": {
                "name": "metaphorjs-ajax",
                "deps": {
                    "metaphorjs-observable": "Observable",
                    "metaphorjs-promise": "Promise",
                    "metaphorjs-select": "select"
                }
            }
        }
    }
}